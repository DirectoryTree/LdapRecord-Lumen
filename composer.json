{
    "name": "directorytree/ldaprecord-lumen",
    "description": "LDAP Authentication & Management for Lumen.",
    "keywords": ["ldaprecord", "adldap2", "ldap", "lumen"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "directorytree/ldaprecord-laravel": "^v3.0.x-dev",
        "laravel/lumen-framework": "^8.0|^9.0|^v10.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.3.1",
        "phpunit/phpunit": "^8.5",
        "laravel/pint": "^1.10"
    },
    "archive": {
        "exclude": ["/tests"]
    },
    "autoload": {
        "psr-4": {
            "LdapRecord\\Lumen\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LdapRecord\\Lumen\\Tests\\": "tests/"
        }
    }
}
